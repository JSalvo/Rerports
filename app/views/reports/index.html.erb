<p id="notice"><%= notice %></p>

<%= link_to 'Back to customers', customers_path  %>

<h1>Elenco dei rapportini di <%=@customer.company_name %></h1>

<table>
  <thead>
    <tr>
		<th>Codice</th>
	      <th>Data</th>
	      <th>Durata intervento</th>
	      <th>Durata Viaggio</th>
		  <th>Descrizione </th>
	      <th>Fatturato</th>
	      <th>Cliente</th>
	      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
		<td><%= report.id  %></td>
        <td><%= report.report_date.strftime("%d/%m/%Y") %></td>
        <td><%= report.hour.to_formatted_s(:time) %></td>
        <td><%= report.hour_trip.to_formatted_s(:time) %></td>
		<td><%= report.description %></td>
		<td><%= report.billed ? "Si" : "No" %></td>


        <td>
          <%= link_to 'Visualizza', report %><br/>
          <%= link_to 'Modifica', edit_report_path(report) %><br/>
          <%= link_to 'Elimina', report, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Rapportino', new_report_path(:customer_id => @customer.id) %>
